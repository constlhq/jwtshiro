<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.svail.jwtshiro.web.mappers.SvailUserMapper">

    <select id="findUserByUsername">
        select * from svail_user where  username = #{username}
    </select>
    <select id="findUserByEmail">
        select * from svail_user where  username = #{username}
    </select>
    <select id="findUserByCellphone">
        select * from svail_user where  username = #{username}
    </select>
    <select id="findRoles">
        select roles from svail_user where  username = #{username}
    </select>
    <select id="findPermissions">
        select permissions from svail_user where  username = #{username}
    </select>

    <insert id="insertUser">
        insert into svail_user(username,email,cellphone,password,credentialsSalt) value (#{username},#{email},#{cellphone},#{password},#{credentialsSalt})
    </insert>
</mapper>